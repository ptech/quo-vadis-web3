---
import board from '../content/board.json'
---

<div class="py-8 sm:py-24">
	<div class="ellipse"></div>

	<div class="mb-16 w-full text-center">
		<h2
			class="animate--on-visibility text-3xl font-bold tracking-tight text-white sm:text-4xl"
			data-animationclass="animate__heartBeat"
		>
			Our Editorial Board
		</h2>
	</div>

	<div class="mx-auto grid max-w-7xl gap-x-8 gap-y-20 px-6 lg:px-8">
		<ul role="list" class="flex flex-wrap justify-center gap-4 sm:gap-x-8 sm:gap-y-16">
			{
				board.map((person) => (
					<li class={`board-item text-white${person.linkedin ? ' link-scale' : ''}`}>
						<a href={person.linkedin} target="_blank">
							<div
								class="animate--on-visibility card flex h-full flex-col items-center gap-x-6 py-4 text-center"
								data-animationclass="animate__zoomIn"
							>
								<h3 class="text-base tracking-tight">{person.name}</h3>
								<p class="text-xs opacity-50">{person.company}</p>
							</div>
						</a>
					</li>
				))
			}
		</ul>
	</div>
</div>

<style>
	.ellipse {
		position: absolute;
		width: 50%;
		height: 50%;
		max-width: 586px;
		max-height: 315px;
		flex-shrink: 0;
		border-radius: 586px;
		background: rgba(115, 83, 229, 0.3);
		filter: blur(100px);
		right: 220px;
		margin-top: -224px;
		z-index: -1;
	}

	h3 {
		font-family: inherit;
	}

	.board-item {
		--gap: 16px;
		--n: 2;
		width: calc((100% / var(--n)) - (((var(--n) - 1) / var(--n)) * var(--gap)));

		@media (min-width: 640px) {
			--gap: 32px;
			--n: 3;
		}

		@media (min-width: 1024px) {
			--n: 4;
		}
	}

	.link-scale {
		transition: all 0.3s ease-in-out;
		transform-style: preserve-3d;

		&:hover {
			transform: scale(1.1);

			@media (min-width: 640px) {
				transform: scale(1.2);
			}
		}
	}

	.card {
		border-radius: 20px;
		border: 1px solid rgba(255, 255, 255, 0.2);
		background: #1d1a27;
		box-shadow: 0px 20px 50px 0px rgba(0, 0, 0, 0.5);
	}
</style>
