---
import PartnerList from './PartnerList.astro'

const mainStr = 'Main'
const goldStr = 'Gold'
const institutionalStr = 'Institutional'
---

<div class="overflow-x-hidden py-44">
	<div class="mx-auto grid max-w-6xl px-6 lg:px-20">
		<h2 class="mb-9 text-3xl font-bold tracking-tight text-white sm:text-4xl">Our Partners</h2>

		<div class="animate--on-visibility" data-animationclass="animate__slideInLeft">
			<PartnerList category={mainStr} />
		</div>

		<div class="animate--on-visibility" data-animationclass="animate__slideInRight">
			<PartnerList category={goldStr} />
		</div>

		<div class="animate--on-visibility" data-animationclass="animate__slideInLeft">
			<PartnerList category={institutionalStr} />
		</div>
	</div>
</div>

<style>
	div {
		--animate-duration: 1s;
	}
</style>
