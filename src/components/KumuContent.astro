---
import Rectangle from './Rectangle.astro'
import KumuIframe from './KumuIframe.astro'
---

<div class="flex flex-col gap-y-8 px-6 py-10 text-white sm:p-16">
	<h2
		class="animate--on-visibility text-center text-3xl font-bold sm:text-4xl"
		data-animationclass="animate__pulse"
	>
		Explore Kumu
	</h2>

	<div class="animate--on-visibility relative" data-animationclass="animate__bounceInLeft">
		<Rectangle />
		<div class="kumu-content overflow-hidden rounded-3xl">
			<KumuIframe />
		</div>
	</div>
</div>

<style>
	.kumu-content {
		height: 75vh;
	}
</style>
